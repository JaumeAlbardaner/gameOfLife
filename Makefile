CC = gcc
CFLAGS = -Wall -I/usr/include/ -I.
LDFLAGS = -lncurses 
OBJ = game.c gameDyn.c

all: printLogo game gameDyn
	
printLogo:
	$(info  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%)
	$(info  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%)
	$(info %   .::::::::      :::       :::   :::   :::::::::: %)
	$(info %   :+:    :+:   :+: :+:    :+:+: :+:+:  :+:        %)
	$(info %   +:+         +:+   +:+  +:+ +:+:+ +:+ +:+        %)
	$(info %   :#:        +#++:++#++: +#+  +:+  +#+ +#++:++#   %)
	$(info %   +#+   +#+# +#+     +#+ +#+       +#+ +#+        %)
	$(info %   #+#    #+# #+#     #+# #+#       #+# #+#        %)
	$(info %    ########  ###     ### ###       ### ########## %)
	$(info %                                                   %)
	$(info %                ::::::::  ::::::::::               %)
	$(info %               :+:    :+: :+:                      %)
	$(info %               +:+    +:+ +:+                      %)
	$(info %               +#+    +:+ :#::+::#                 %)
	$(info %               +#+    +#+ +#+                      %)
	$(info %               #+#    #+# #+#                      %)
	$(info %                ########  ###                      %)
	$(info %                                                   %)
	$(info %    :::        ::::::::::: :::::::::: ::::::::::   %)
	$(info %    :+:            :+:     :+:        :+:          %)
	$(info %    +:+            +:+     +:+        +:+          %)
	$(info %    +#+            +#+     :#::+::#   +#++:++#     %)
	$(info %    +#+            +#+     +#+        +#+          %)
	$(info %    #+#            #+#     #+#        #+#          %)
	$(info %    ########## ########### ###        ##########   %)
	$(info %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%)
	$(info %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%)
	$(info )
	$(info )

gameDyn-debug: gameDyn.c
	gcc  -o $@ $^  $(LDFLAGS) $(CFLAGS) -g


gameDyn: gameDyn.c
	gcc  -o $@ $^  $(LDFLAGS) $(CFLAGS)

game: game.c
	gcc  -o $@ $^  $(LDFLAGS) $(CFLAGS)

clean:
	rm -f game gameDyn
